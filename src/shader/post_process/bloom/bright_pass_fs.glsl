// ------------------------------------------------------------------
// OUTPUTS ----------------------------------------------------------
// ------------------------------------------------------------------

out vec3 PS_OUT_FragColor;

// ------------------------------------------------------------------
// INPUTS -----------------------------------------------------------
// ------------------------------------------------------------------

in vec2 PS_IN_TexCoord;

// ------------------------------------------------------------------
// UNIFORMS ---------------------------------------------------------
// ------------------------------------------------------------------

uniform float u_Threshold;
uniform sampler2D s_Color;

// ------------------------------------------------------------------
// MAIN -------------------------------------------------------------
// ------------------------------------------------------------------

void main()
{
	vec3 luminance_vec = vec3(0.2125, 0.7154, 0.0721);
	vec3 color = texture2D(s_Color, PS_IN_TexCoord).rgb;
	float luminance = dot(luminance_vec, color);
	luminance = max(0.0, luminance - u_Threshold);
	color *= sign(luminance);
	
	PS_OUT_FragColor = color;
}

